@Article{MeijerSijtsma2001,
  Title                    = {Methodology Review: Evaluating Person Fit.},
  Author                   = {Meijer, Rob R. and Sijtsma, Klaas},
  Journal                  = {Applied Psychological Measurement},
  Year                     = {2001},
  Pages                    = {107-135},
  Volume                   = {25},

  Abstract                 = {Person-fit methods based on classical test theory and item response theory (IRT), and methods investigating particular types of response behavior on tests, are examined. Similarities and difference among person-fit methods and their advantages and disadvantages are discussed. Sound person-fit methods have been derived for the Rasch model. For other IRT models, the empirical and theoretical distributions differ for most person-fit statistics when used with short and moderate length tests. The detection rate of person-fit statistics depends on the type of misfitting item-score patterns, test length, and trait levels. The usefulness of person-fit statistics for proving measurement depends on the application. (PsycINFO Database Record (c) 2012 APA, all rights reserved)},
  Keywords                 = {person-fit statistics, appropriateness measurement, caution indices, item response theory, classical test theory, test response behavior, test performance, Item Response Theory, Personality Traits, Statistical Measurement, Statistics, Test Administration, Item Analysis (Statistical)}
}

